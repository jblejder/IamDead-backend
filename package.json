{
  "name": "iamdead-backend",
  "version": "1.0.0",
  "description": "Backend for IamDead",
  "engines": {
    "node": "9.8.0",
    "npm": "5.6.0"
  },
  "repository": {
    "url": "https://github.com/jblejder/IamDead-backend",
    "type": "git"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "node dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "npm run watch-ts & npm run serve-debug",
    "postinstall": "npm run build",
    "clear": "rm -rf ./dist; rm -rf ./node_modules"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^4.6.6",
    "@nestjs/core": "^4.6.6",
    "@nestjs/microservices": "^4.6.6",
    "@nestjs/mongoose": "^3.0.1",
    "@nestjs/testing": "^4.6.6",
    "@nestjs/websockets": "^4.6.6",
    "@types/body-parser": "^1.16.8",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/uuid": "^3.4.3",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "mongodb": "^3.0.5",
    "mongoose": "^5.0.11",
    "nodemon": "^1.17.2",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.7",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "uuid": "^3.2.1"
  }
}
